{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"forceConsistentCasingInFileNames": true,
		"jsx": "preserve",
		"module": "ESNext",
		"moduleResolution": "node",
		"noEmit": true,
		"paths": {
			"@": ["."],
			"@/*": ["./src/*"],
			"@/workflow/*": ["./workflow/*"]
		},
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext",
		"types": [
			"node",
			"vite/client",
			"@types/js-cookie"
		]
	},
	"include": ["**/*"]
}
